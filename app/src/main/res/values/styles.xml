<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MontserratText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">Montserrat</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RobotoMonoText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>


<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="MontserratHeaderText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MontserratBigWhiteText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MontserratBoldProgress" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoMonoText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">#373B4F</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RobotoMonoHintText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textColor">#FF9B9DA7</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BroccalcButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_mono</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="VioletButton" parent="BroccalcButton">
        <item name="android:background">@drawable/violet_button_selector</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="VioletLiningButton" parent="BroccalcButton">
        <item name="android:background">@drawable/violet_lining_button_selector</item>
        <item name="android:textColor">@drawable/violet_lining_button_text_colors_selector</item>
    </style>

    <style name="MainScreenSnackbarTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">Roboto Mono</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MainScreenSnackbarCircleText" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">Roboto Mono</item>
        <item name="android:textColor">#FFF9F9FB</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>


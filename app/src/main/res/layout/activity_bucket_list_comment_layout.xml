<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    app:layout_constraintTop_toBottomOf="@+id/weight_text_view">
    <TextView
        android:id="@+id/comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        style="@style/RobotoMonoHintText"
        app:layout_constraintTop_toTopOf="@+id/add_comment_button"
        app:layout_constraintBottom_toBottomOf="@+id/add_comment_button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/comment"/>
    <View
        android:id="@+id/add_comment_button"
        android:layout_height="35dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@id/comment_title"
        app:layout_constraintLeft_toLeftOf="@id/comment_title"
        android:background="@drawable/button_background"/>
    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        style="@style/RobotoMonoText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comment_title"
        android:visibility="gone"
        tools:text="@string/lorem_ipsum_short"/>
</androidx.constraintlayout.widget.ConstraintLayout>
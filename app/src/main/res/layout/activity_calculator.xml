<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="korablique.recipecalculator.CalculatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3">

            <!--шапка-->
            <TableRow>

                <TextView
                    android:layout_margin="1dp"
                    android:background="#FFF"
                    android:text="@string/component_name"
                    android:textSize="20sp"
                    android:layout_weight="2"/>
                <TextView
                    android:layout_margin="1dp"
                    android:background="#FFF"
                    android:text="@string/product_weight"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_margin="1dp"
                    android:background="#FFF"
                    android:text="@string/protein"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_margin="1dp"
                    android:background="#FFF"
                    android:text="@string/fat"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_margin="1dp"
                    android:background="#FFF"
                    android:text="@string/carbs"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_margin="1dp"
                    android:background="#FFF"
                    android:text="@string/calories"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/table_layout"
            android:text="@string/add_product"/>

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/button_add">

            <TextView
                android:id="@+id/result_weight_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/weight_of_cooked_product"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/result_weight_edit_text"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/count_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout"
            android:text="@string/count" />

    </RelativeLayout>

</FrameLayout>
